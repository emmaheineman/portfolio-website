---
import ProjectLayout from '../../layouts/ProjectLayout.astro';

const project = {
  title: "Sadie Skin",
  category: "Brand Identity",
  description: "A clean, minimal skincare brand identity designed to feel fresh and approachable.",
  year: "2024",
  type: "Mock Project",
  deliverables: "Brand identity, mockups",
  sections: [
    {
      title: "The Brief",
      body: "Sadie Skin was a concept project based on a brief from Brief Club, challenging me to design a complete skincare brand identity.",
    },
    {
      title: "The Approach",
      body: "I wanted the brand to feel fresh, natural, and approachable. I started by moodboarding around natural textures, soft colors, and simple typography, then explored type pairings and layouts to create a clean, minimal look. From there, I designed mockups to bring the brand to life.",
    },
  ],
  images: [
    { src: "/projects/sadie-skin/main.jpg", alt: "Sadie Skin brand overview" },
    { src: "/projects/sadie-skin/image-12.jpg", alt: "Sadie Skin branding" },
    { src: "/projects/sadie-skin/image-13.jpg", alt: "Sadie Skin product mockups" },
    { src: "/projects/sadie-skin/image-09.jpg", alt: "Sadie Skin design element" },
    { src: "/projects/sadie-skin/image-07.jpg", alt: "Sadie Skin design element" },
  ],
};
---

<ProjectLayout
  title={project.title}
  category={project.category}
  description={project.description}
  year={project.year}
  type={project.type}
  deliverables={project.deliverables}
  sections={project.sections}
>
  {project.images.map((image) => (
    <img
      src={image.src}
      alt={image.alt}
      style="width: 80%; border-radius: 12px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);"
    />
  ))}
</ProjectLayout>
