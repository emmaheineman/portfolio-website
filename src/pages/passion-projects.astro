---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Passion Projects | Emma">
  <!-- Back navigation -->
  <nav class="bg-warm-white border-b border-cream-dark">
    <div style="padding: 1rem 2rem 1rem 5rem;">
      <a href="/#passion-projects" style="display: inline-flex; align-items: center; gap: 0.5rem; background-color: #9eb2f8; color: white; padding: 0.6rem 1.5rem; border-radius: 50px; font-size: 0.9rem; text-decoration: none; transition: transform 0.2s, box-shadow 0.2s;" class="font-medium hover:scale-105 hover:shadow-lg">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
        Back
      </a>
    </div>
  </nav>

  <!-- Content -->
  <div style="padding: 4rem 2rem; min-height: 60vh;">
    <div style="max-width: 800px; margin: 0 auto; text-align: center;">
      <span class="inline-block px-4 py-1 rounded-full text-sm font-medium mb-4" style="background-color: #eeffac; color: #162617;">
        Fun
      </span>
      <h1 class="font-[family-name:var(--font-display)] text-4xl md:text-5xl text-text-dark mb-6">
        Passion Projects
      </h1>
      <p style="color: #162617;" class="text-lg">
        Coming soon...
      </p>
    </div>
  </div>

  <!-- Footer -->
  <footer class="py-6 px-6 bg-text-dark text-text-light text-center text-sm">
    <p>Designed & built by Emma</p>
  </footer>
</Layout>
