---
import Layout from '../layouts/Layout.astro';

const projects = [
  {
    id: 1,
    title: "Acro Yoga CHS",
    slug: "acro-yoga",
    category: "Brand Identity",
    year: "2023",
    description: "Brand identity for an acrobatic yoga group in Charleston, SC.",
    image: "/projects/acro-yoga/ACRO-02.jpg",
  },
  {
    id: 2,
    title: "Keene Housing Kids Collaborative",
    slug: "khkc",
    category: "Print Design",
    year: "2024",
    description: "Print design for a nonprofit connecting kids in affordable housing with enriching programs.",
    image: "/projects/KHKC/zoomed out.png",
    thumbnailStyle: "transform: scale(1.5);",
  },
  {
    id: 3,
    title: "Verde Vida",
    slug: "verde-vida",
    category: "Brand & Strategy",
    year: "2025",
    description: "Brand identity for a NYC nonprofit bringing fresh produce to underserved communities.",
    image: "/projects/Verde Vida/1.jpg",
  },
  {
    id: 4,
    title: "Graduation Announcement",
    slug: "project-three",
    category: "Print Design",
    year: "2024",
    description: "A custom graduation announcement designed to capture personality over formality.",
    image: "/projects/tate/Tate front.jpg",
    thumbnailStyle: "object-position: center 25%;",
  },
  {
    id: 5,
    title: "Office of Education Abroad",
    slug: "hunter",
    category: "Brand Identity",
    year: "2024",
    description: "A cohesive visual identity for CUNY Hunter College's study abroad office.",
    image: "/projects/hunter/Instagram Designs mock.jpg",
  },
  {
    id: 6,
    title: "Sadie Skin",
    slug: "project-two",
    category: "Mock Project",
    year: "2024",
    description: "A clean, minimal skincare brand identity designed to feel fresh and approachable.",
    image: "/projects/sadie-skin/image-13.jpg",
  },
];
---

<Layout title="Emma Heineman | Designer">
  <style is:global>
    .project-row:hover img {
      transform: scale(1.02);
    }
    .project-row img {
      transition: transform 0.3s ease;
    }
    .project-row:hover .project-title {
      font-weight: bold;
    }

    /* Light mode styles */
    .light-mode .hero-intro,
    .light-mode .hero-subtext,
    .light-mode .project-year,
    .light-mode .project-category,
    .light-mode .project-description {
      color: #666;
    }
    .light-mode .hero-title,
    .light-mode .project-title {
      color: #162617;
    }
    .light-mode .highlight-green {
      background: none;
    }
    .light-mode .project-row[style*="border-top"] {
      border-color: #e0e0e0 !important;
    }

    /* Dark mode styles */
    .dark-mode .hero-intro,
    .dark-mode .hero-subtext {
      color: #eeffac;
    }
    .dark-mode .project-year,
    .dark-mode .project-category,
    .dark-mode .project-description {
      color: #aaa;
      transition: color 0.2s ease;
    }
    .dark-mode .project-row:hover .project-year,
    .dark-mode .project-row:hover .project-category,
    .dark-mode .project-row:hover .project-description {
      color: #FAF7F2;
    }
    .dark-mode .hero-title {
      color: #FAF7F2;
    }
    .dark-mode .project-title {
      color: #eeffac;
    }
    .dark-mode .highlight-green {
      background: linear-gradient(to top, transparent 15%, rgba(238, 255, 172, 0.4) 15%, rgba(238, 255, 172, 0.4) 55%, transparent 55%);
    }
    .dark-mode .project-row[style*="border-top"] {
      border-color: rgba(238, 255, 172, 0.25) !important;
    }

    /* Scroll arrow */
    .light-mode .scroll-arrow { color: #162617; }
    .dark-mode .scroll-arrow { color: #eeffac; }
    @keyframes bob {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(8px); }
    }
    .scroll-arrow {
      animation: bob 2s ease-in-out infinite;
    }
    @media (max-width: 768px) {
      .hero-section {
        min-height: calc(100vh - 60px) !important;
      }
      section {
        padding-left: 1.5rem !important;
        padding-right: 1.5rem !important;
      }
      section h1 {
        font-size: 1.75rem !important;
      }
      .projects-list {
        gap: 0 !important;
      }
      .project-row {
        grid-template-columns: 1fr !important;
        gap: 1rem !important;
        padding: 1.5rem 0 !important;
      }
      .project-row > div:first-child {
        order: 2;
        grid-template-columns: 1fr !important;
        gap: 0.5rem !important;
      }
      .project-row > div:first-child > div {
        margin-left: 0 !important;
      }
      .project-row > div:last-child {
        order: 1;
        max-width: 100% !important;
        margin-left: 0 !important;
      }
      .project-title {
        white-space: normal !important;
      }
      .project-description {
        max-width: 100% !important;
      }
    }
  </style>

  <!-- Hero -->
  <section class="hero-section" style="min-height: calc(100vh - 80px); display: flex; flex-direction: column; align-items: center; justify-content: center; padding: 2rem 3rem; max-width: 900px; margin: 0 auto; text-align: center; position: relative;">
    <div>
      <p class="hero-intro" style="font-size: 1.1rem; margin-bottom: 1rem;">Hi, I'm Emma.</p>
      <h1 class="hero-title font-[family-name:var(--font-display)]" style="font-size: 3rem; line-height: 1.3; margin-bottom: 1.5rem;">
        A <span class="highlight-green">Brooklyn-based designer</span> with a love for branding, visual storytelling, and film photography.
      </h1>
      <p class="hero-subtext" style="font-size: 1.1rem;">
        Currently open to new opportunities.
      </p>
    </div>
    <!-- Scroll indicator -->
    <a href="#work" class="scroll-arrow" style="position: absolute; bottom: 2rem; text-decoration: none;">
      <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M12 5v14M5 12l7 7 7-7"/>
      </svg>
    </a>
  </section>

  <!-- Work Section -->
  <section id="work" style="padding: 0 3rem 2rem 3rem;">
    <div class="projects-list" style="display: flex; flex-direction: column;">
      {projects.map((project, index) => (
        <a
          href={`/projects/${project.slug}`}
          class="project-row"
          style={`text-decoration: none; display: grid; grid-template-columns: 1fr 1fr; gap: 2rem; align-items: start; padding: 2.5rem 0; ${index !== 0 ? 'border-top: 1px solid;' : ''}`}
        >
          <div style="display: grid; grid-template-columns: auto auto 1fr; gap: 3rem; align-items: baseline;">
            <p class="project-year" style="font-size: 0.85rem;">{project.year}</p>
            <p class="project-category" style="font-size: 0.85rem;">{project.category}</p>
            <div style="text-align: left; margin-left: 2rem;">
              <h3 class="project-title" style="font-size: 1rem; margin-bottom: 0.5rem; text-transform: uppercase; letter-spacing: 0.05em; white-space: nowrap;">
                {project.title}
              </h3>
              <p class="project-description" style="font-size: 0.9rem; line-height: 1.5; max-width: 280px;">{project.description}</p>
            </div>
          </div>
          <div style="overflow: hidden; border-radius: 0.5rem; aspect-ratio: 3/2;">
            <img
              src={project.image}
              alt={project.title}
              style={`width: 100%; height: 100%; object-fit: cover; display: block; ${project.thumbnailStyle || ''}`}
            />
          </div>
        </a>
      ))}
    </div>
  </section>

</Layout>
